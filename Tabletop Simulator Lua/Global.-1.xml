<!-- Panel to show current frags -->
<VerticalLayout
  id="fragsPanel"
  active="false"

  rectAlignment="UpperLeft"
  offsetXY="88 -70"
  width="50"
  height="280"

  padding="8 8 4 4"
  color="rgba(0, 0, 0, 0.95)"
  >
  <Button
    id="frag"
    class="ini"
    onClick="cb7512/updateFrag"
